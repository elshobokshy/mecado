{% extends 'layout.twig' %}

{% block body %}
    <div class="col-md-9">
        <div class="box">
            <h1>My account</h1>
            <p>Check your personal details here.</p>

            <h3>Change password</h3>

            <form action="{{ path_for('myaccount') }}" method="POST">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="password_old">Old password</label>
                            <input type="password" name="password_old" class="form-control">
                        </div>
                    </div>
                </div>
                    <div class="col-sm-6">
                <div class="row">
                        <div class="form-group">
                            <label for="password">New password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="password_confirm">Retype new password</label>
                            <input type="password" name="password_confirm" class="form-control">
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="col-sm-12 text-center">
                    {{ csrf() }}
                    <button type="submit" name="change_pw" class="btn btn-primary"><i class="fa fa-save"></i> Save new password</button>
                </div>
            </form>

            <hr>

            <h3>Personal details</h3>
            <form action="{{ path_for('myaccount') }}" method="POST" >
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="firstname">First name</label>
                            <input type="text" class="form-control editInputs" name="first_name" id="firstname" value="{{ auth.user.first_name }}">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="lastname">Last name</label>
                            <input type="text" class="form-control editInputs" name="last_name" id="lastname" value="{{ auth.user.last_name }}">
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control editInputs" name="email" id="email" value="{{ auth.user.email }}" disabled>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-4">
                        <div class="text-center">
                            {{ csrf() }}
                            <button type="submit" name="change_details" class="btn btn-primary editInputs" value="Submit">Submit <i class="fa fa-user-md"></i></button>
                        </div>
                    </div>
                </div>
                {% if has_errors() %}
                    <div class="alert alert-warning">
                        {% for paramErrors in errors() %}
                            {% for error in paramErrors %}
                                <p>{{ error }}</p>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
            </form>

            <h3>Delete account</h3>
            <form action="{{ path_for('myaccount') }}" method="POST" >
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-4">
                        <div class="text-center">
                            {{ csrf() }}
                            <button type="submit" name="delete_account" value="Delete">Delete account</button>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
                {% if has_errors() %}
                    <div class="alert alert-warning">
                        {% for paramErrors in errors() %}
                            {% for error in paramErrors %}
                                <p>{{ error }}</p>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}